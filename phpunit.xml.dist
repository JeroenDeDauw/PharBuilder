<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="src/tests/bootstrap.php"
         cacheTokens="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         stopOnError="false"
         stopOnFailure="false"
         stopOnIncomplete="false"
         stopOnSkipped="false"
         strict="true"
         verbose="true">
    <testsuites>
        <testsuite name="PharBuilder">
            <directory>src/tests/phpunit</directory>
        </testsuite>
    </testsuites>
</phpunit>
